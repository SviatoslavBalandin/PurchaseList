<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <corners android:radius="1dp" />
            <stroke android:width="0.5dp" android:color="#FF6F00" />
            <gradient android:angle="270" android:centerColor="#BDBDBD" android:endColor="#9E9E9E" android:startColor="#616161" />
            <gradient android:angle="270" android:centerColor="#757575" android:endColor="#616161" android:startColor="#424242" />
            <size android:width="15dp" android:height="15dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke android:width="0.5dp" android:color="#FF6F00" />
                    <gradient android:angle="270" android:centerColor="#BDBDBD" android:endColor="#9E9E9E" android:startColor="#616161" />
                    <size android:width="15dp" android:height="15dp"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>
