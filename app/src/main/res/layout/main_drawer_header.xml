<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/appAccountImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@string/additionally"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/decrease_resol_image"
        app:layout_collapseMode="parallax" />

    <ImageView
        android:id="@+id/appIconInHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/additionally"
        android:scaleType="centerCrop"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@mipmap/ic_header_icon" />

    <TextView
        android:id="@+id/userNameHeaderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userEmailHeaderTV"
        android:layout_alignParentStart="true"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/userEmailHeaderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>
