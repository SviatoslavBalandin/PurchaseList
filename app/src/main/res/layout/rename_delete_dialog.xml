<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_style"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        >
        <TextView
            android:id="@+id/renameDeleteDialogRename"
            android:layout_above="@id/renameDeleteDialogBorder"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@drawable/rename_delete_btn_style"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/rename_list"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:layout_marginBottom="5dp"/>
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@color/dark_grey"
            android:layout_centerInParent="true"
            android:id="@+id/renameDeleteDialogBorder"/>

        <TextView
            android:id="@+id/renameDeleteDialogDelete"
            android:layout_below="@id/renameDeleteDialogBorder"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rename_delete_btn_style"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/delete"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />
    </RelativeLayout>
</LinearLayout>
