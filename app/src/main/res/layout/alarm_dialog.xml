<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/alarm_dialog_style"
    android:paddingEnd="15dp"
    android:paddingStart="15dp">

    <RelativeLayout
        android:id="@+id/alarmDialogContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingBottom="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/alarmDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="#80DEEA"
            android:textSize="24sp" />

        <Button
            android:id="@+id/alarmDialogButtonNegative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/alarm_button_style"
            android:textColor="#81D4FA"
            android:textSize="18sp" />

        <Button
            android:id="@+id/alarmDialogButtonPositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/alarm_button_style"
            android:textColor="#81D4FA"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>
